<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.rohan.todoSQLMaterialDesign" >

    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.rohan.todoalarm.AllToDos"
            android:label="@string/app_name" >

            <!-- android:theme="@style/Theme.Transparent" -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.rohan.todoalarm.Add"
            android:label="@string/title_activity_add_to_do"
            >
            <!--android:windowSoftInputMode="stateVisible" -->
        </activity>
        <activity
            android:name="com.example.rohan.todoalarm.Display"
            android:label="@string/title_activity_display_individual_to_do" >
        </activity>
        <activity
            android:name="com.example.rohan.todoalarm.ToDoCompleted"
            android:label="@string/title_activity_completed_to_do"
            android:theme="@style/AppTheme" >
        </activity>
        <activity
            android:name="com.example.rohan.todoalarm.ToDoCompletedHelper"
            android:label="@string/title_activity_to_do_completed_helper"
            android:theme="@style/AppTheme" >
        </activity>
        <activity
            android:name="com.example.rohan.todoalarm.ToDoArrayAdapterCompleted"
            android:label="@string/title_activity_completed_to_do_array_adapter"
            android:theme="@style/AppTheme" >
        </activity>

        <receiver
            android:name="com.example.rohan.todoalarm.AlarmReceiver"
            android:enabled="true"
            android:exported="true" >
        </receiver>
    </application>

</manifest>
